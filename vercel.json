{
    "version": 2,
    "builds": [
        {
            "src": "public/index.php",
            "use": "@vercel/php",
            "config": { "maxLambdaSize": "50mb" }
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [{ "src": "/(.*)", "dest": "public/index.php" }]
}
